{
  "name": "les-douceurs-de-mil√©na",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "mobile:doctor": "cap doctor",
    "mobile:add:android": "cap add android",
    "mobile:add:ios": "cap add ios",
    "mobile:sync": "npm run build && cap sync",
    "mobile:open:android": "cap open android",
    "mobile:open:ios": "cap open ios",
    "mobile:init:android": "npm run mobile:add:android && npm run mobile:sync",
    "mobile:apk:debug": "cd android && ./gradlew assembleDebug",
    "mobile:apk:debug:win": "cd android && gradlew.bat assembleDebug",
    "mobile:apk:release": "cd android && ./gradlew assembleRelease",
    "mobile:apk:release:win": "cd android && gradlew.bat assembleRelease",
    "mobile:bootstrap:android": "bash ./scripts/bootstrap-android-apk.sh",
    "mobile:apk": "bash ./scripts/build-android-apk.sh",
    "mobile:apk:script:debug": "bash ./scripts/build-android-apk.sh debug",
    "mobile:apk:script:release": "bash ./scripts/build-android-apk.sh release",
    "android:apk:debug": "npm run mobile:apk:debug",
    "android:apk:release": "npm run mobile:apk:release",
    "mobile:bootstrap:android:win": "powershell -ExecutionPolicy Bypass -File ./scripts/bootstrap-android-apk.ps1",
    "mobile:apk:win": "powershell -ExecutionPolicy Bypass -File ./scripts/build-android-apk.ps1",
    "mobile:apk:script:debug:win": "powershell -ExecutionPolicy Bypass -File ./scripts/build-android-apk.ps1 -Mode debug",
    "mobile:apk:script:release:win": "powershell -ExecutionPolicy Bypass -File ./scripts/build-android-apk.ps1 -Mode release",
    "mobile:icons:android": "node ./scripts/apply-android-logo.mjs"
  },
  "dependencies": {
    "@capacitor/core": "^8.0.2",
    "pdf-lib": "^1.17.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/ios": "^8.0.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "happy-dom": "^20.5.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.18",
    "sharp": "^0.34.4"
  }
}
